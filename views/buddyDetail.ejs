      </div>
      <!-- Thumbnails removed as requested -->
    </div>

    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 id="buddyTitle" class="text-3xl font-bold text-gray-800 mb-2">Activity</h1>
          <div class="flex items-center space-x-4 text-gray-600">
            <span id="location" class="flex items-center">
              Location
            </span>
          </div>
        </div>
        <div class="text-right">
          <div id="cost" class="text-3xl font-bold text-blue-600 mb-1"></div>
          <div class="text-sm text-gray-500">per person</div>
        </div>
      </div>

      <!-- Action Buttons -->
