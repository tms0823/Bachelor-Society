<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= typeof title !== 'undefined' ? title : 'Bachelor Society' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#eff6ff',
                100: '#dbeafe',
                200: '#bfdbfe',
                300: '#93c5fd',
                400: '#60a5fa',
                500: '#3b82f6',
                600: '#2563eb',
                700: '#1d4ed8',
                800: '#1e40af',
                900: '#1e3a8a',
              }
            },
            animation: {
              'fade-in': 'fadeIn 0.5s ease-in-out',
              'slide-up': 'slideUp 0.3s ease-out',
              'bounce-subtle': 'bounceSubtle 2s infinite',
            }
          }
        }
      }
    </script>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      @keyframes slideUp {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }
      @keyframes bounceSubtle {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
      }
      .animate-fade-in { animation: fadeIn 0.5s ease-in-out; }
      .animate-slide-up { animation: slideUp 0.3s ease-out; }
      .animate-bounce-subtle { animation: bounceSubtle 2s infinite; }
    </style>
  </head>
  <body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 min-h-screen font-sans">
    <!-- Navigation -->
    <nav class="bg-white/80 backdrop-blur-md shadow-lg border-b border-white/20 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-sm">BS</span>
              </div>
              <span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
                Bachelor Society
              </span>
            </a>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <div id="guest-nav" class="flex items-center space-x-4">
              <a href="/login" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Login</a>
              <a href="/register" class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-2 rounded-full hover:shadow-xl transform hover:scale-105 hover:shadow-blue-500/25 transition-all duration-300 font-medium relative overflow-hidden group">
                <span class="relative z-10">Get Started</span>
                <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </a>
            </div>

            <div id="user-nav" class="hidden items-center space-x-6">
              <div class="relative group">
                <button class="flex items-center space-x-1 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
                  <span>Features</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="py-2">
                    <a href="/housing" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200">Housing</a>
                    <a href="/buddies" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200">Buddies</a>



                    <a href="/roommates" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200">Roommates</a>
                  </div>
                </div>
              </div>

              <a href="/profile" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Profile</a>
              <button onclick="handleLogout()" id="logout-btn" class="text-red-600 hover:text-red-700 transition-colors duration-200 font-medium">Logout</button>
            </div>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-btn" class="text-gray-600 hover:text-blue-600 transition-colors duration-200">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200">
          <div id="mobile-guest-nav" class="space-y-2 pt-4">
            <a href="/login" class="block text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Login</a>
            <a href="/register" class="block bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-2 rounded-lg text-center font-medium">Get Started</a>
          </div>

          <div id="mobile-user-nav" class="hidden space-y-2 pt-4">
            <a href="/housing" class="block text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Housing</a>
            <a href="/buddies" class="block text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Buddies</a>



            <a href="/roommates" class="block text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Roommates</a>
            <a href="/profile" "block text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium py-2">Profile</a>
            <button onclick="handleLogout()" id="mobile-logout-btn" class="block text-red-600 hover:text-red-700 transition-colors duration-200 font-medium py-2 w-full text-left">Logout</button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
