<script>
let currentRoommate = null;
let currentPhotos = [];

// Load roommate details
async function loadRoommateDetail() {
  const urlParams = new URLSearchParams(window.location.search);
  const roommateId = window.location.pathname.split('/')[2];

  try {
    const token = localStorage.getItem('token') || urlParams.get('token');
    const headers = token ? { 'Authorization': `Bearer ${token}` } : {};

    const response = await fetch(`/api/roommates/${roommateId}`, { headers });
    if (!response.ok) throw new Error('Roommate request not found');

    const data = await response.json();
    currentRoommate = data.roommate || data;
    // Handle photos field - it might be already parsed or a JSON string
    if (currentRoommate.photos) {
      if (Array.isArray(currentRoommate.photos)) {
        currentPhotos = currentRoommate.photos;
      } else {
        try {
          // Handle double-encoded JSON strings
          let photosStr = currentRoommate.photos;
          if (typeof photosStr === 'string' && photosStr.startsWith('"') && photosStr.endsWith('"')) {
            photosStr = JSON.parse(photosStr); // Unescape the outer JSON encoding
          }
          if (typeof photosStr === 'string') {
            currentPhotos = JSON.parse(photosStr); // Parse the actual JSON
          } else if (Array.isArray(photosStr)) {
            currentPhotos = photosStr;
          } else {
            currentPhotos = [];
          }
        } catch (e) {
          console.warn('Failed to parse photos:', currentRoommate.photos, e);
          currentPhotos = [];
        }
      }
    } else {
      currentPhotos = [];
    }

    displayRoommateDetails();
  } catch (error) {
    document.getElementById('loading').classList.add('hidden');
    document.getElementById('error').classList.remove('hidden');
    console.error('Error loading roommate details:', error);
  }
}

function displayRoommateDetails() {
  document.getElementById('loading').classList.add('hidden');
  document.getElementById('listingContent').classList.remove('hidden');

  // Photo gallery
  setupPhotoGallery();

  // Basic information
  document.getElementById('roommateTitle').textContent = `Roommate Request by ${currentRoommate.owner_name || currentRoommate.owner_username || 'User'}`;
  document.getElementById('location').textContent = currentRoommate.preferred_location || 'Location not specified';
  document.getElementById('budgetRange').textContent = `${currentRoommate.budget_min || 0} - ${currentRoommate.budget_max || 0} BDT`;
  document.getElementById('roommates').textContent = `${currentRoommate.max_roommates || 1} roommates needed`;

  const budgetDisplay = currentRoommate.budget_max ?
    `${currentRoommate.budget_min || 0} - ${currentRoommate.budget_max} BDT` :
    `${currentRoommate.budget_min || 0}+ BDT`;
  document.getElementById('budget').textContent = budgetDisplay;

  // Roommate details
  document.getElementById('locationDetail').textContent = currentRoommate.preferred_location || 'Not specified';
  document.getElementById('moveInDate').textContent = currentRoommate.move_in_date ? new Date(currentRoommate.move_in_date).toLocaleDateString() : 'Flexible';
  document.getElementById('roomType').textContent = currentRoommate.room_type === 'any' ? 'Any room type' : currentRoommate.room_type;
  document.getElementById('leaseDuration').textContent = `${currentRoommate.lease_duration_preference || 12} months`;

  // Preferences
  document.getElementById('genderPreference').textContent = currentRoommate.gender_preference === 'any' ? 'Any gender' : `${currentRoommate.gender_preference} only`;
  document.getElementById('occupation').textContent = currentRoommate.occupation === '' ? 'Any occupation' : currentRoommate.occupation;
  document.getElementById('religion').textContent = currentRoommate.religion || 'Not specified';

  // Lifestyle
  document.getElementById('smokingPreference').textContent = currentRoommate.smoking_preference === 'any' ? 'Any' : currentRoommate.smoking_preference;
  document.getElementById('petPreference').textContent = currentRoommate.pet_preference === 'any_pets' ? 'Any' : currentRoommate.pet_preference.replace('_', ' ');
  document.getElementById('lifestyle').textContent = currentRoommate.lifestyle || 'Not specified';

  // Description
  document.getElementById('description').textContent = currentRoommate.description || 'No description provided';

  // Owner info - extract name from email if needed
  let ownerDisplayName = currentRoommate.owner_name;
  if (!ownerDisplayName) {
    // If name is null, try to extract name from username/email
    const username = currentRoommate.owner_username || '';
    if (username.includes('@')) {
      // If username looks like email, extract part before @
      ownerDisplayName = username.split('@')[0];
      // Capitalize first letter
      ownerDisplayName = ownerDisplayName.charAt(0).toUpperCase() + ownerDisplayName.slice(1);
    } else {
      ownerDisplayName = username;
    }
  }
  document.getElementById('ownerName').textContent = ownerDisplayName || 'Roommate Seeker';

  // Owner avatar
  const avatarContainer = document.getElementById('ownerAvatarContainer');
  if (currentRoommate.owner_profile_picture) {
    avatarContainer.innerHTML = `<img src="${currentRoommate.owner_profile_picture}" alt="${currentRoommate.owner_username}'s profile" class="w-full h-full object-contain rounded-full border-2 border-white shadow-md">`;
  } else {
    const initials = (currentRoommate.owner_name || currentRoommate.owner_username || 'U').charAt(0).toUpperCase();
    avatarContainer.innerHTML = `<div class="w-full h-full bg-blue-100 flex items-center justify-center rounded-full border-2 border-white shadow-md">
      <span class="text-2xl text-blue-600 font-semibold">${initials}</span>
    </div>`;
  }

  // Stats
  document.getElementById('budgetStat').textContent = budgetDisplay;
  document.getElementById('roommatesStat').textContent = currentRoommate.max_roommates || 1;
  document.getElementById('moveInStat').textContent = currentRoommate.move_in_date ? new Date(currentRoommate.move_in_date).toLocaleDateString() : 'Flexible';
  document.getElementById('postedStat').textContent = new Date(currentRoommate.created_at).toLocaleDateString();

  // Privacy badge
  if (currentRoommate.is_private) {
    document.getElementById('privateBadge').classList.remove('hidden');
  }

  // Show/hide actions based on ownership
  if (currentRoommate.is_owner) {
    document.getElementById('visitorActions').classList.add('hidden');
    document.getElementById('ownerActions').classList.remove('hidden');
    // Set edit button href
    document.getElementById('editBtn').href = `/roommates/${currentRoommate.id}/edit`;
    // Hide message button for owners (can't message yourself)
    document.getElementById('messageOwnerBtn').style.display = 'none';
  } else {
    document.getElementById('visitorActions').classList.remove('hidden');
    document.getElementById('ownerActions').classList.add('hidden');
    // Show message button for non-owners
    document.getElementById('messageOwnerBtn').style.display = 'block';
  }
}

let currentPhotoIndex = 0;
let autoRotateInterval = null;

function setupPhotoGallery() {
  const mainPhotoContainer = document.getElementById('mainPhotoContainer');
  const mainPhoto = document.getElementById('mainPhoto');
  const photoIndicators = document.getElementById('photoIndicators');

  if (!currentPhotos || currentPhotos.length === 0) {
    // Show placeholder when no photos
    mainPhotoContainer.classList.remove('hidden');
    mainPhoto.classList.add('hidden');
    // Hide navigation elements
    document.getElementById('prevPhoto').style.display = 'none';
    document.getElementById('nextPhoto').style.display = 'none';
    photoIndicators.innerHTML = '';
    return;
  }

  // Hide placeholder and show actual photo
  mainPhotoContainer.classList.add('hidden');
  mainPhoto.classList.remove('hidden');

  // Set main photo
  if (currentPhotos[0] && currentPhotos[0].url) {
    mainPhoto.src = currentPhotos[0].url;
  }

  photoIndicators.innerHTML = '';

  currentPhotos.forEach((photo, index) => {
    if (!photo || !photo.url) return;

    // Indicators
    const indicator = document.createElement('div');
    indicator.className = `w-2 h-2 rounded-full cursor-pointer ${index === 0 ? 'bg-blue-500' : 'bg-gray-300'}`;
    indicator.onclick = () => {
      changeMainPhoto(index);
      resetAutoRotate();
    };
    photoIndicators.appendChild(indicator);
  });

  // Start auto-rotation if there are multiple photos
  if (currentPhotos.length > 1) {
    startAutoRotate();
  }

  // Add arrow navigation
  if (currentPhotos.length > 1) {
    document.getElementById('prevPhoto').addEventListener('click', () => {
      currentPhotoIndex = (currentPhotoIndex - 1 + currentPhotos.length) % currentPhotos.length;
      changeMainPhoto(currentPhotoIndex);
      resetAutoRotate();
    });

    document.getElementById('nextPhoto').addEventListener('click', () => {
      currentPhotoIndex = (currentPhotoIndex + 1) % currentPhotos.length;
      changeMainPhoto(currentPhotoIndex);
      resetAutoRotate();
    });
  } else {
    // Hide arrows if only one photo
    document.getElementById('prevPhoto').style.display = 'none';
    document.getElementById('nextPhoto').style.display = 'none';
  }
}

function startAutoRotate() {
  // Rotate every 4 seconds
  autoRotateInterval = setInterval(() => {
    currentPhotoIndex = (currentPhotoIndex + 1) % currentPhotos.length;
    changeMainPhoto(currentPhotoIndex);
  }, 4000);
}

function resetAutoRotate() {
  if (autoRotateInterval) {
    clearInterval(autoRotateInterval);
  }
  // Restart auto-rotation after user interaction
  if (currentPhotos.length > 1) {
    setTimeout(() => startAutoRotate(), 2000); // Wait 2 seconds before restarting
  }
}

function changeMainPhoto(index) {
  const mainPhoto = document.getElementById('mainPhoto');
  const indicators = document.querySelectorAll('#photoIndicators div');

  mainPhoto.src = currentPhotos[index].url;

  // Update active states
  indicators.forEach((indicator, i) => {
    indicator.className = `w-2 h-2 rounded-full ${i === index ? 'bg-blue-500' : 'bg-gray-300'}`;
  });
}



document.getElementById('messageOwnerBtn').addEventListener('click', () => {
  document.getElementById('messageModal').classList.remove('hidden');
});

document.getElementById('cancelMessage').addEventListener('click', () => {
  document.getElementById('messageModal').classList.add('hidden');
  document.getElementById('messageForm').reset();
});

// Delete button handler
document.getElementById('deleteBtn').addEventListener('click', async () => {
  if (!confirm('Are you sure you want to delete this roommate request? This action cannot be undone.')) return;

  const deleteBtn = document.getElementById('deleteBtn');
  const originalText = deleteBtn.textContent;
  deleteBtn.disabled = true;
  deleteBtn.textContent = 'Deleting...';

  try {
    const token = localStorage.getItem('token');
    const response = await fetch(`/api/roommates/${currentRoommate.id}`, {
      method: 'DELETE',
      headers: { Authorization: `Bearer ${token}` }
    });

    if (response.ok) {
      alert('Roommate request deleted successfully');
      window.location.href = '/roommates';
    } else {
      const json = await response.json();
      alert(json.message || 'Failed to delete roommate request');
    }
  } catch (error) {
    alert('Network error. Please try again.');
  } finally {
    deleteBtn.disabled = false;
    deleteBtn.textContent = originalText;
  }
});

document.getElementById('messageForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const message = document.getElementById('messageText').value.trim();
  if (!message) return;

  const sendBtn = document.getElementById('sendMessageBtn');
  const originalText = sendBtn.textContent;
  sendBtn.disabled = true;
  sendBtn.textContent = 'Sending...';

  let success = false;

  try {
    const token = localStorage.getItem('token');

    const response = await fetch('/api/messages', {
      method: 'POST',
      headers: {
        'Authorization': `Bearer ${token}`,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        receiver_id: currentRoommate.owner_id,
        message: message,
        related_type: 'roommate',
        related_id: currentRoommate.id
      })
    });

    const result = await response.json();

    if (response.ok) {
      sendBtn.textContent = '‚úì';
      sendBtn.className = 'bg-green-600 text-white px-4 py-2 rounded-md';
      success = true;

      // Reset button and close modal after 1 second
      setTimeout(() => {
        sendBtn.disabled = false;
        sendBtn.textContent = 'Send Message';
        sendBtn.className = 'bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700';
        document.getElementById('messageModal').classList.add('hidden');
        document.getElementById('messageForm').reset();
      }, 1000);
    } else {
      alert(result.message || 'Failed to send message');
    }
  } catch (error) {
    alert('Network error. Please try again.');
  } finally {
    if (!success) {
      sendBtn.disabled = false;
      sendBtn.textContent = originalText;
    }
  }
});

// Initialize
loadRoommateDetail();
</script>

